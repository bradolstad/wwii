<%= form_for(@unit, :html=>{class:"form-inline"},remote:true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :unit_type_id %>
  <%= f.collection_select :unit_type_id, UnitType.all, :id, :name, prompt:'Select a Unit Type' %><br>
  <%= f.label :country_id %>
  <%= f.collection_select :country_id, Country.all, :id, :name, prompt:'Select a Country' %><br>
  <%= f.label :icon_id %>
  <%= f.collection_select :icon_id, Icon.all, :id, :name, prompt:'Select an icon' %><br>
  <%= f.submit class:"btn" %>
<% end %>
