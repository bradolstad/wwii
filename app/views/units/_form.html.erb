<%= form_for(@unit, :html=>{class:"form-inline"},remote:true) do |f| %>
  <%= f.text_field :name %>
  <%= f.collection_select :unit_type_id, UnitType.all, :id, :name, prompt:'Select a Unit Type' %>
  <%= f.collection_select :country_id, Country.all, :id, :name, prompt:'Select a Country' %>
  <%= f.submit class:"btn" %>
<% end %>
