<h2 class="main-title"><%= @unit.name %></h2>
<p class="main-text">Unit Events</p>
<div id="units">
  <ul class="main-list">
    <% @unit.events.each do |event| %>
      <li class="main-list-item">
        <%= link_to event.name+" "+event.date_formated, event, class:"main-list-link" %>

      </li>
    <% end  %>
  </ul>
</div>
