<h1><%= @campaign.name %></h1>

<div class="span3">
  <h4>Operations</h4>
  <ul class="unstyled">
    <% @operations.each do |operation| %>
      <li>
        <%= link_to operation.name, operation %> - <%= operation.date_formated(operation.start_date) %>
      </li>
    <% end %>
  </ul>
</div>
<div class="span3">
  <h4>Units Involved</h4>
  <ul class="unstyled">
    <% @units.each do |unit| %>
      <li>
        <%= unit.name %>
      </li>
    <% end %>
  </ul>
</div>
