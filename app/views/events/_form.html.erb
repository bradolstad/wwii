<%= form_for(@event) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :Longitude %><br />
    <%= f.text_field :lng %>
  </div>
  <div class="field">
    <%= f.label :Latitude %><br />
    <%= f.text_field :lat %>
  </div>
  </div class="field">
    <%= f.label :Date %><br/>
    <%= f.date_select :event_date,start_year:1939,end_year:1949 %>
  <div>
   <%= select_tag :unit_id, options_from_collection_for_select(Unit.all, "id", "name") %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
