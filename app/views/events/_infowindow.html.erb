<div class="gwindow">
  <h5><%= event.name %></h5>
  <h6>on <%= event.date_formated %></h6>
  <p>
    <%= link_to(image_tag(event.flag_path, width:40,class:"flag",align:"left"), country_path(event.calculate_country)) %>
