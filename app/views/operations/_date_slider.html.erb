<% content_for :slider do %>
  <%= content_tag "div",
    id:"slider",
    data:{
      mindate:(operation.first_date.to_i if operation.events.any?),
      maxdate:(operation.last_date.to_i if operation.events.any?),
      url:operation_path,
      defmin:(operation.start_date.to_i unless operation.start_date.nil?),
      defmax:(operation.end_date.to_i unless operation.end_date.nil?)
    } do %>
      <input type="text" id="date"/>
      <div id="slider-range"></div>
  <% end %>
<% end %>
